<mvc:View
    controllerName="chobanii.controller.changelog"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="Log Details"
        titleAlignment="Center"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
        showNavButton="true"
        navButtonPress=".onBack"
    >
        <content>
            <!-- <Bar id="idBar">
            <contentRight>
				<SearchField width="25%" search="onSearch" placeholder="Invoice Number"/>
				<Text text="" id="idSearchListToolbar" />
			</contentRight>
            
        </Bar> -->
            <VBox>
                <Table
                    id="idChangeLogTable"
                    items="{Model>/invoiceLogs}"
                    visible="true"
                    class="sapUiLargeMarginBottom"
                >
                    <columns>
                        <Column>
                            <Text text="Log ID" />
                        </Column>
                        <Column>
                            <Text text="Invoice Number" />
                        </Column>
                        <Column>
                            <Text text="Line Item" />
                        </Column>
                        <Column
                            id="column6"
                            hAlign="Center"
                        >
                            <Label
                                text="Action"
                                design="Bold"
                                id="action"
                            />
                        </Column>
                        <Column
                            id="column7"
                            hAlign="Center"
                        >
                            <Label
                                text="Creted Date"
                                design="Bold"
                                id="Date"
                            />
                        </Column>
                        <Column
                            id="column8"
                            hAlign="Center"
                        >
                            <Label
                                text="Created by"
                                design="Bold"
                                id="Created"
                            />
                        </Column>
                       
                    </columns>
                    <items>
                        <ColumnListItem
                            press="onItemPress"
                            type="Navigation"
                        >
                            <cells>
                                <Text text="{Model>logId}" />
                                <Text text="{Model>invoiceNo}" />
                                <Text text="{Model>lineItem}" />
                                <Text text="{Model>action}" />
                                <Text text="{Model>createdDate}" />
                                <Text text="{Model>createdBy}" />

                                <!-- <Button icon="sap-icon://delete" type="Emphasized" press="onRowDelete"/> -->
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
